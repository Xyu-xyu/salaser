{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Vermatic functions",
	"description": "Vermatic functions",
	"type": "object",
	"properties": {
		"Origin_offset": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"x_offset": {
					"type": "number",
					"minimum": 0,
					"maximum": 100,
					"default": 0,
					"title": "Origin offset x, mm"
				},
				"y_offset": {
					"type": "number",
					"minimum": 0,
					"maximum": 100,
					"default": 0,
					"title": "Origin offset y, mm"
				},
				"enabled": {
					"type": "boolean",
					"default": false,
					"title": "Programmed reference enabled",
					"description": "Indicates if the Programmed_reference function is enabled"
				}
			},
			"required": [
				"x_offset",
				"y_offset",
				"enabled"
			]
		},
		"Edge_detection": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"Detection_method": {
					"type": "string",
					"enum": [
						"Capacitive",
						"Detection eye"
					],
					"title": "Detection method"
				},
				"Detection": {
					"type": "string",
					"enum": [
						"X",
						"Y",
						"angle",
						"X/Y",
						"X/Y/angle"
					],
					"title": "Detection",
					"description": "Always required"
				},
				"Move_to_starting_point_manually": {
					"type": "boolean",
					"default": false,
					"title": "Move to starting point manually"
				},
				"Detection_corner": {
					"type": "string",
					"enum": [
						"Fl",
						"Fr",
						"Br",
						"Bl"
					],
					"title": "Detection corner"
				},
				"Sheet_loading": {
					"type": "string",
					"enum": [
						"Fl",
						"Fr",
						"Br",
						"Bl"
					],
					"title": "Sheet loading"
				},
				"Sheet_dimension_offset_long_edge": {
					"type": "number",
					"default": 0,
					"minimum": 0,
					"maximum": 100,
					"title": "Sheet dimension offset long edge, mm"
				},
				"Angle_or_sheet_corner": {
					"type": "number",
					"default": 90,
					"minimum": 0,
					"maximum": 360,
					"title": "Angle or sheet corner, deg"
				},
				"enabled": {
					"type": "boolean",
					"default": false,
					"title": "Programmed_reference enabled",
					"description": "Indicates if the Programmed_reference function is enabled"
				}
			},
			"required": [
				"Detection_method",
				"Detection",
				"Move_to_starting_point_manually",
				"Detection_corner",
				"Sheet_loading",
				"enabled"
			]
		},
		"Microjoints": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"enabled": {
					"type": "boolean",
					"default": false,
					"title": "Microjoints enabled",
					"description": "Indicates if the Microjoints function is enabled"
				},

				"function": {
					"title": "Microjoints function",
					"description": "Select microjoints function or false to disable",
					"type": "string",
					"enum": [
						"Programmed",
						"Programmed + Measurement",
						"Measurement",
						"Programmed + position",
						"Position"
					]
				},
				"min_x_dimension": {
					"type": "number",
					"minimum": 0,
					"maximum": 100,
					"default":0,
					"title": "Min X dimension, mm"
				},
				"max_x_dimension": {
					"type": "number",
					"minimum": 0,
					"maximum": 100,
					"default":0,
					"title": "Max X dimension, mm"
				},
				"min_y_dimension": {
					"type": "number",
					"minimum": 0,
					"maximum": 100,
					"default":0,
					"title": "Min Y dimension, mm"
				},
				"max_y_dimension": {
					"type": "number",
					"minimum": 0,
					"maximum": 100,
					"default":0,
					"title": "Max Y dimension, mm"
				}
			},
			"required": [
				"enabled",
				"function",
				"min_x_dimension",
				"max_x_dimension",
				"min_y_dimension",
				"max_y_dimension"
			]
		},
		"Stops": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"Stop_before_part": {
					"type": "number",
					"minimum": 0,
					"maximum": 100,
					"default":25,
					"title": "Stop before part",
					"description": "0 = off"
				},
				"Stop_at": {
					"type": "string",
					"enum": [
						"Off",
						"Nozzle_change"
					],
					"default": "Off",
					"title": "Stop at"
				},
				"Stop_Select": {
					"type": "string",
					"enum": [
						"Off",
						"On"
					],
					"default": "Off",
					"title": "Stop Select"
				},
				"enabled": {
					"type": "boolean",
					"default": false,
					"title": "Programmed reference enabled",
					"description": "Indicates if the Programmed_reference function is enabled"
				}
			},
			"required": [
				"Stop_before_part",
				"Stop_at",
				"Stop_Select",
				"enabled"
			]
		},
		"Nozzle_cleaning": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"enabled": {
					"type": "boolean",
					"default": false,
					"title": "Nozzle cleaning enabled",
					"description": "Indicates if the Nozzle_cleaning function is enabled"
				},
				"value": {
					"type": "boolean",
					"default": false,
					"title": "Nozzle cleaning value",
					"description": "Clean nozzle when cutting plan finished"
				}
			},
			"required": [
				"enabled",
				"value"
			]
		},
		"Programmed_reference": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"Programmed_reference_x": {
					"type": "number",
					"minimum": 0,
					"maximum": 100,
					"default": 0,
					"title": "Programmed reference x, mm",
					"description": "Значение в миллиметрах"
				},
				"Programmed_reference_y": {
					"type": "number",
					"minimum": 0,
					"maximum": 100,
					"default": 0,
					"title": "Programmed reference y, mm",
					"description": "Значение в миллиметрах"
				},
				"enabled": {
					"type": "boolean",
					"default": false,
					"title": "Programmed reference enabled",
					"description": "Indicates if the Programmed_reference function is enabled"
				}
			},
			"required": [
				"Programmed_reference_x",
				"Programmed_reference_y",
				"enabled"
			]
		},
		"Vaporisation": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"enabled": {
					"type": "boolean",
					"default": false,
					"title": "Vaporisation enabled",
					"description": "Indicates if the Vaporisation function is enabled"
				},
				"function": {
					"title": "Vaporisation",
					"description": "Controls vaporisation behavior: part / plan / lead-in, or disabled (false)",
					"type": "string",
					"enum": [
						"part",
						"plan",
						"lead-in"
					]		
				}
			},
			"required": [
				"enabled",
				"value"
			]
		},
		"inverse": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"enabled": {
					"type": "boolean",
					"default": false,
					"title": "Inverse enabled",
					"description": "Indicates if the Inverse function is enabled"
				},
				"value": {
					"type": "boolean",
					"default": false,
					"title": "Inverse value",
					"description": "Reverse the logical state (true = inverted)"
				}
			},
			"required": [
				"enabled",
				"value"
			]
		},
		"Sensor_field": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"enabled": {
					"type": "boolean",
					"default": false,
					"title": "Sensor field enabled",
					"description": "Indicates if the Sensor_field function is enabled"
				},
				"value": {
					"type": "boolean",
					"default": false,
					"title": "Sensor field value",
					"description": "Indicates whether the sensor field is active"
				}
			},
			"required": [
				"enabled",
				"value"
			]
		}
	},
	"required": [
		"Origin_offset",
		"Programmed_reference",
		"Nozzle_cleaning",
		"inverse",
		"Sensor_field",
		"Vaporisation",
		"Stops",
		"Microjoints",
		"Edge_detection"
	],
	"additionalProperties": false
}